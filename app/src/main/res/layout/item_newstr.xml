<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_newitem"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_100sdp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:id="@+id/imgstr"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bgimg_new"
            app:riv_corner_radius="@dimen/_30sdp" />

        <TextView
            android:id="@+id/namestr"
            android:layout_width="99dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="41dp"
            android:layout_toEndOf="@+id/imgstr"
            android:maxLines="@integer/material_motion_duration_long_2"
            android:text="Stories name"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewstr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/imgstr"
            android:text="Stories name"
            android:textColor="@color/Black" />
    </RelativeLayout>
</RelativeLayout>