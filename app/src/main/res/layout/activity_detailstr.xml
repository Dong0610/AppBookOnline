<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:fitsSystemWindows="true"
    tools:context=".activity.DetailStrActivity">

    <RelativeLayout
        android:id="@+id/bgre"
        android:paddingStart="@dimen/_18sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/White"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/baseline_arrow"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/imguser"
               android:layout_gravity="center"
               android:layout_width="@dimen/_200sdp"
               android:layout_height="@dimen/_250sdp"/>
           <TextView
               android:id="@+id/strname"
               android:layout_gravity="center"
               android:textSize="@dimen/_15sdp"
               android:textStyle="bold"
               android:fontFamily="@font/myfont"
               android:text="strname"
               android:textColor="@color/Blue"
               android:textAlignment="center"
               android:layout_margin="@dimen/_20sdp"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_24sdp"/>

           <TextView
               android:id="@+id/strmota"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:text="strnamesdksnkjjbdvbsbfjnoasklkaksnsjdkjfsdsjdsksjksjdsdjsjkssjdsjj"
               android:textAlignment="center"
               android:textColor="#000000"
               android:textSize="@dimen/_13sdp" />

           <TextView
               android:id="@+id/idcategory"
               android:layout_gravity="center"
               android:textSize="@dimen/_13sdp"
               android:textColor="#000000"
               android:text="strname"
               android:textAlignment="center"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_24sdp"/>
           <TextView
               android:id="@+id/strview"
               android:layout_gravity="center"
               android:textSize="@dimen/_13sdp"
               android:textColor="#000000"
               android:text="strname"
               android:textAlignment="center"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_24sdp"/>
           <TextView
               android:id="@+id/emailuser"
               android:layout_gravity="center"
               android:text="strname"
               android:textSize="@dimen/_13sdp"
               android:textColor="#000000"
               android:textAlignment="center"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_20sdp"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_24sdp"/>
           <Button
               android:id="@+id/btreadstr"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_34sdp"
               android:layout_marginLeft="@dimen/_60sdp"
               android:layout_marginTop="@dimen/_30sdp"
               android:layout_marginRight="@dimen/_60sdp"
               android:background="@drawable/customtextbox"
               android:fontFamily="@font/myfont"
               android:text="Đọc truyện"
               android:textColor="@color/DodgerBlue"
               android:textSize="@dimen/_16sdp"
               android:textStyle="bold"
               android:layout_marginBottom="@dimen/_40sdp"/>
       </LinearLayout>
    </ScrollView>


</LinearLayout>